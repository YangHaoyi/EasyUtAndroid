<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/room"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:background="@mipmap/weather_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="@color/colorWhite"
                android:text="晴天"/>

            <TextView
                android:id="@+id/tvBaskNotice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:text="轻度晒"/>

        </LinearLayout>
    </LinearLayout>







    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/tvHourTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24小时温度"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvPrecipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:text="降水量"/>

        <TextView
            android:id="@+id/tvWindPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:text="风力风向"/>

    </LinearLayout>



    <com.yanghaoyi.easyutandroid.view.comp.PeopleView
        android:id="@+id/vPeople"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="30dp"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#030303">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="天气"
            android:textColor="#00E5EE"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="实景"
            android:textColor="#00E5EE"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btHelp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#00E5EE"
            android:text="帮助"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>


</FrameLayout>